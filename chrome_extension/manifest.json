{
  "manifest_version": 3,
  "name": "LinkedIn Job Agent",
  "version": "1.0",
  "description": "Apply to jobs using an AI agent!",
  "permissions": ["storage", "scripting", "tabs", "activeTab"],
  "host_permissions": ["http://localhost:5000/*"],
  "sidebar_action": {
    "default_panel": "panel.html",
    "default_title": "AI Job Agent",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
